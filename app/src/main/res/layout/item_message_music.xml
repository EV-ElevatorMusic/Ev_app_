    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:background="@drawable/music_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp">


        <ImageView
            android:id="@+id/cMusicImg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/cMusicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아픈 길"
            android:fontFamily="@font/nanumgothicbold"
            android:textSize="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cMusicImg"
            android:textColor="#646464"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/cMusicArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAY6(데이식스)"
            android:textSize="6dp"
            android:textColor="#646464"
            android:fontFamily="@font/nanumgothiclight"
            app:layout_constraintTop_toBottomOf="@+id/cMusicTitle"
            app:layout_constraintLeft_toRightOf="@+id/cMusicImg"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"/>

