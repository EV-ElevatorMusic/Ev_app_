<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterActivity">

    <TextView
        android:id="@+id/enterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="36sp"
        android:text="환영합니다!"
        android:fontFamily="@font/nanumgothicbold"
        android:textColor="#646464"
        android:layout_marginTop="231dp"/>

    <TextView
        android:id="@+id/enterDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/enterTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="인공지능 음악 힐링 E.V와 함께하세요"
        android:textSize="14sp"
        android:fontFamily="@font/nanumgothiclight"
        android:textColor="#646464"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/enterDoc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:text="로그인 화면으로 가기"
        android:textSize="16sp"
        android:textColor="#fff"
        android:fontFamily="@font/nanumgothic"
        style="?materialButtonStyle"
        app:cornerRadius="16dp"
        android:elevation="8dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>