<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="#fcfcfc">

    <ImageView
        android:layout_width="58dp"
        android:layout_height="68dp"
        android:background="@drawable/logo_glow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="258dp"/>

    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="58dp"
        android:layout_height="68dp"
        android:background="@drawable/main_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="258dp"/>

    <TextView
        android:id="@+id/splashTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인공지능 음악 심리 치료"
        android:textSize="10sp"
        android:textColor="#f9c135"
        android:fontFamily="@font/nanumgothic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashImg"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevator music"
        android:textSize="14sp"
        android:textColor="#f4a505"
        android:fontFamily="@font/nanumgothicbold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashTxt"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>